# === Django / Backend ===
DJANGO_SECRET_KEY=change_me_secret_key
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Название Django-приложения для Celery (например, config или config.celery)
DJANGO_CELERY_APP=config

# Порт, на который будет проброшен backend с хоста
BACKEND_PORT=8000

# === Postgres ===
POSTGRES_DB=online_school
POSTGRES_USER=online_school_user
POSTGRES_PASSWORD=change_me_db_password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Если вы используете DATABASE_URL (например, через dj-database-url),
# раскомментируйте и подставьте свои значения:
# DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# === Redis / Celery ===
REDIS_HOST=redis
REDIS_PORT=6379
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

